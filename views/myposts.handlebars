<p class="greeting">Hello {{username}}! Your USER ID: {{userid}}</p>
<div class="myposts-wrapper">
  <div class="myposts-container">
    <h3>Manage my posts</h3>
    {{#each posts as |post|}}
    <div class="manage-list-card">
      <p>"<span>{{post.content}}</span>" POST ID: <span class="manage-post-id">{{post.id}}</span></p>
      <button class="delete-my-post">delete</button>
      <button>update</button>
    </div>
    {{/each}}
    <h3>Manage my comments</h3>
    {{#each comments as |comment|}}
    <div class="manage-list-card"><p>"<span>{{comment.comment}}</span>" COMMENT ID:<span class="manage-comment-id">{{comment.id}}</span></p>
      <button class="delete-my-comment">delete</button>
      <button>update</button>
    </div>
    {{/each}}
  </div>
  <script src="/js/myposts.js"></script>
</div>